<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.TreeView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.TextFlow?>
<VBox xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/10.0.2-internal"
      fx:controller="ru.chsergeig.fb2reader.controller.MainWindowController">
    <children>

        <MenuBar fx:id="menubar" prefHeight="20.0">
            <Menu text="System">
                <Menu fx:id="lastBooks" text="Open recent"/>
                <SeparatorMenuItem mnemonicParsing="false"/>
                <MenuItem onAction="#handleExitButton" text="Exit"/>
            </Menu>
            <Menu text="Book">
                <MenuItem onAction="#handleSelectFilePressed" text="Select file"/>
                <MenuItem onAction="#handleShowInfoDialog" text="Show info"/>
            </Menu>
        </MenuBar>
        <GridPane fx:id="gridPane" VBox.vgrow="ALWAYS">

            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="80.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="20.0" prefWidth="100.0"/>
            </columnConstraints>

            <rowConstraints>
                <RowConstraints minHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints vgrow="ALWAYS"/>
            </rowConstraints>

            <ButtonBar buttonMinWidth="20.0" GridPane.columnIndex="1" GridPane.rowIndex="0">
                <buttons>
                    <Button minHeight="20.0" minWidth="20.0" onAction="#handleFontDecrease" prefHeight="20.0"
                            prefWidth="20.0" text="-" textAlignment="CENTER" wrapText="true"/>
                    <Button minHeight="20.0" minWidth="20.0" onAction="#handleFontIncrease" prefHeight="20.0"
                            prefWidth="20.0" text="+" textAlignment="CENTER" wrapText="true"/>
                </buttons>
                <padding>
                    <Insets left="5.0" right="5.0"/>
                </padding>
            </ButtonBar>
            <AnchorPane GridPane.columnIndex="0" GridPane.rowIndex="1">
                <children>

                    <ScrollPane AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0"
                                AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
                        <content>
                            <TextFlow fx:id="main">
                                <padding>
                                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                                </padding>
                            </TextFlow>
                        </content>
                    </ScrollPane>
                </children>
            </AnchorPane>

            <TreeView fx:id="tree" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

        </GridPane>
    </children>
</VBox>
